<div class="comment-container flex-col gap-1">
    <% if comments.any? %>
        <% comments.includes(:user).each do |comment| %>
            <div class="flex justify-between">
                <div class="comment-card">
                    <div class="comment-name" ><%= comment.user.name %></div>
                    <div ><%= comment.text %></div>
                </div>
                <% if @post && comment && can?(:destroy, comment) %>
                    <%= button_to "Delete", delete_comment_path(user_id: @user.id, post_id: @post.id, id: comment.id), method: :delete, data: { confirm: "Are you sure?" } %>
                <% end %>
            </div>
        <% end %>
    <% else %>
        <div>No comment</div>
    <% end %>
</div>

